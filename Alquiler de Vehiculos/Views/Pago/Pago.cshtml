@{
    ViewData["Title"] = "Gestión de Pagos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pago.css" />
}

<div class="container py-5">
    <!-- Encabezado -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">
            <i class="fas fa-money-bill-wave text-success me-3"></i>
            Gestión de Pagos
        </h1>
    </div>

    <!-- Vista para Cliente -->
    <div id="clienteView">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-receipt me-2"></i>
                    Mis Transacciones
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Concepto</th>
                                <th>Método de Pago</th>
                                <th>Monto</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>01/03/2024</td>
                                <td>Alquiler Toyota Corolla</td>
                                <td>Tarjeta de Crédito</td>
                                <td>$150.00</td>
                                <td><span class="badge bg-success">Pagado</span></td>
                                <td>
                                    <button class="btn btn-sm btn-primary" onclick="verFactura(1)">
                                        <i class="fas fa-file-invoice"></i> Ver Factura
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Vista para Empleado -->
    <div id="empleadoView" style="display: none;">
        <div class="row">
            <!-- Resumen de Pagos -->
            <div class="col-md-4 mb-4">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h5>Total Pagos Recibidos</h5>
                        <h2>$1,250.00</h2>
                        <p>Último mes</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card bg-warning text-dark">
                    <div class="card-body">
                        <h5>Pagos Pendientes</h5>
                        <h2>$350.00</h2>
                        <p>5 transacciones</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h5>Total Clientes</h5>
                        <h2>28</h2>
                        <p>Con pagos registrados</p>
                    </div>
                </div>
            </div>

            <!-- Tabla de Transacciones -->
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-list-alt me-2"></i>
                            Registro de Pagos de Clientes
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID Cliente</th>
                                        <th>Nombre</th>
                                        <th>Fecha</th>
                                        <th>Concepto</th>
                                        <th>Método</th>
                                        <th>Monto</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>#001</td>
                                        <td>Juan Pérez</td>
                                        <td>01/03/2024</td>
                                        <td>Alquiler Toyota Corolla</td>
                                        <td>Tarjeta</td>
                                        <td>$150.00</td>
                                        <td><span class="badge bg-success">Completado</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-primary me-1">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-sm btn-success">
                                                <i class="fas fa-file-pdf"></i>
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Factura -->
<div class="modal fade" id="facturaModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Detalle de Factura</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Contenido de la factura -->
            </div>
        </div>
    </div>
</div>

